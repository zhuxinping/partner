.home-bg
	background-color #ffffff
	.home-banner
		width 100%
	.home-operation
		margin-top 18px
		.home-login
			width 90%
			height 90px
			display flex
			align-items center
			margin auto
			border-bottom 2.1px solid #eee
			.icon
				width 35px
				height 35px
				margin-right 30px
				display inline-block
				background url('../../assets/images/loading-id.png')
				background-size 100% 100%
			.pass
				background url('../../assets/images/loading-paasword.png')
				background-size 100% 100%
			input
				width 100%
				height 60px
				font-size 30px
				border 0
				color #333333
		.button
			width 80%
			height 88px
			line-height 88px
			border-radius 100px
			text-align center
			background-color #74A9FF
			color #ffffff
			font-size 32px
			margin auto
			//margin-top 80px
	.radio-input
		font-size 28px
		color #818d9d
		display flex
		justify-content: center
		height 120px
		align-items center
	span.checkcont
		width 36px
		height 36px
		margin-right 16px
		box-sizing border-box
		border-radius 100%
		background url("../../assets/images/icon_unselected.png") no-repeat
		background-size 100% 100%
		input
			display none
		input[type=checkbox]:checked + label
			border none
			background url("../../assets/images/list-selected.png") no-repeat
			background-size 100% 100%
		label
			width 36px
			height 36px
			display inline-block
			border-radius 100%
			box-sizing border-box
