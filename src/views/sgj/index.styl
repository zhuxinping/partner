			display block
			margin-bottom 20px
			font-size 26px
			color #818D9D
	li.lbd1:after,
	li.lbd2:after
		content ''
		background-image linear-gradient(to left, #d5f1fe, #fff)
		position absolute
		bottom 0
		left 0
		width 100%
		height 2.1px
	/*border-right 1px solid #efefef*/
	li.lbd2:after
		transform rotateY(-180deg)
	li.lbd3:before,
	li:first-child:before,
	li.lbd5:before
		content: ''
		background-image linear-gradient(to top, #d5f1fe, #fff)
		position absolute
		right 0
		top 0
		height 100%
		width 2.1px
	li.lbd3:before
		background #d5f1fe
	li.lbd5:before
		transform rotateX(-180deg)
