.today-sum-title
	font-size 28px
	color #666
	height 60px
	line-height 60px
	background #fff
	padding-bottom 40px
.today-sum
	display flex
	justify-content center
	height 88px
	line-height 88px
	color #05ACFF
	background-color #fff
	font-size 56px
	padding-bottom 14px
	em
		font-size 70px
		color #05ACFF
	.icon-rmb
		font-size 28px
		font-style normal
		color #666
.pay-tab
	display flex
	width 100%
	justify-content space-between
	padding-bottom 30px
	margin-bottom 20px
	background-color #fff
	li
		flex 1
		display flex
		flex-direction column
		color #666
		position relative
		span
			font-size 28px
		em
			font-size 44px
			margin-top 15px
			color #05ACFF
	li:nth-child(1):after {
		position absolute
		top 50%
		margin-top -40px
		right 0
		width 2.1px
		height 84px
		content ''
		background-color #EEE
	}
	li:nth-child(2):after {
		position absolute
		top 50%
		margin-top -40px
		right 0
		width 2.1px
		height 84px
		content ''
		background-color #EEE
	}
