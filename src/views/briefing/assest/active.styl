.order-trend
	margin-bottom 20px
	.active-link
		padding 30px 0
		text-align right
		color #818d9d
		font-size 26px
		background #fff
		display flex
		justify-content flex-end
		align-items center
		i
			margin-left 20px
			margin-top 2px
	.active
		color #FF5E68
	.chart-line
		width: 690px
		height: 418px
		margin 0 auto
		border 2.1px solid #91DAFF
	.chart-box
		width: 100%
		box-sizing border-box
		background #fff
		padding 12px 30px 20px 30px
