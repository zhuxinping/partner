.class-room
	width 100%
	max-height 330px
	overflow-y scroll
	-webkit-overflow-scrolling touch
	background-color #ffffff
	padding-top 20px
	display flex
	flex-wrap wrap
	.class-room-li
		width 150px
		height 110px
		margin-left 30px
		position: relative
		.class-room-text
			border-radius 8px
			font-size 26px
			color #614646
			background #FFE7E7
			display flex
			flex-direction column
			align-items center
			.grade
				overflow hidden
				text-overflow ellipsis
				white-space nowrap
				display inline-block
				height 35px
				line-height 35px
				width 100%
			.grade:nth-child(1){
				margin-top 10px
			}
			.grade:nth-child(2){
				margin-bottom 10px
			}
		.select-class:after
			content ''
			display inline-block
			position absolute
			top 60px
			right -15px
			width 30px
			height 30px
			background-size 100% 100%
			background-image url("../../assets/images/icon-choice.png")
.class-room::-webkit-scrollbar {/*滚动条整体样式*/
	width 10px    /*高宽分别对应横竖滚动条的尺寸*/
	height 10px
}
.class-room::-webkit-scrollbar-thumb {/*滚动条里面小方块*/
	border-radius 5px
	-webkit-box-shadow inset 0 0 5px rgba(0,0,0,0.2)
	background rgba(0,0,0,0.2)
}
.class-room::-webkit-scrollbar-track {/*滚动条里面轨道*/
	-webkit-box-shadow inset 0 0 5px #fff
	border-radius: 0
	background #fff
}
.student
	background #fff
	margin-top 20px
	position relative
	.student-text
		background #fff
		font-size 26px
		color #818D9D
		padding 20px 30px 30px 20px
		text-align left
		em
			color #ff5e68
.class-list
	background-color #fff
	display flex
	flex-direction column
	padding-bottom 20px
	.tbody-student
		margin 0 20px
		border-right 2.1px solid #eee
		display flex
		li
			flex 1
			font-size 0
			color #818D9D
			border-left 2.1px solid #eee
			border-top 2.1px solid #eee
			span
				display block
				font-size 24px
				width 120px
				height 80px
				line-height 80px
				padding 0 10px
				margin auto
				overflow hidden
				text-overflow ellipsis
				white-space nowrap
				border-bottom 2.1px solid #eee
.header-student
	height 110px
	margin 0 20px
	background #f3fbff
	border 2.1px solid #eee
	border-bottom 0
	display flex
	li
		flex 1
		font-size 24px
		color #818D9D
		border-right 2.1px solid #eee
		span
			width 22px
			height 22px
			border-radius 6px
			margin-right 10px
			margin-top 30px
			display inline-block
	li:nth-child(1) span
		background #BBBBBD
	li:nth-child(2) span
		background #FF7880
	li:nth-child(3) span
		background #FF8F53
	li:nth-child(4) span
		background #3FBFFF
	li:nth-child(5)
		border-right 0
		span
			background #61E461
