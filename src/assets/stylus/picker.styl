.mint-popup-bottom
 width 100%
.addressx
	height 440px
.share-popup
	  width 100%
	  .popup-top
		  width 100%
		  height 88px
		  display flex
		  align-items center
		  line-height 88px
		  background-color #f9f9f9
		  justify-content space-between
		  span
			  display block
			  font-size: 28px
			  color: #74A9FF
		  span:nth-child(1) {
			  width 80px
			  margin-left 20px
		  }
		  span:nth-child(3) {
			  width 80px
			  margin-right 20px
		  }
		  .popup-title
			  font-size 32px
			  color #333333
.addressx .picker-center-highlight:before, .addressx .picker-center-highlight:after
	height: 2.1px !important
.addressx .picker-item
	font-size: 38px !important
.time .mint-datetime-action
	margin-top: 25px
	font-size: 28px !important
.time .picker-toolbar
	height: 88px
.time .picker-item
	font-size: 38px !important
.time .picker-center-highlight:before, .time .picker-center-highlight:after
	height: 3px !important
.no-date .picker-slot.picker-slot-center:nth-child(3)
	display none
// swiper cell样式重写
.mint-cell
	text-decoration none
	position relative
	border-bottom 2.1px solid #eee
.mint-cell-swipe-buttongroup
	display flex
.mint-cell-swipe-button
	font-size 32px
	-webkit-box-align center
	align-items center
	justify-content center !important
	flex 1
	display inline-flex !important
.mint-cell-title
	width 0 !important
	display none
